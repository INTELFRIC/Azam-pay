{
    "name": "intelfric/laravel-azampay",
    "description": "Laravel Azampay",
    "keywords": [
        "intelfric",
        "laravel",
        "laravel-azampay"
    ],
    "homepage": "https://github.com/intelfric/laravel-azampay",
    "license": "MIT",
    "authors": [
        {
            "name": "Intelfric Technologies",
            "email": "info@intelfric.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.2",
        "guzzlehttp/guzzle": "^7.5",
        "illuminate/contracts": "^12.0",
        "spatie/laravel-package-tools": "^1.16",
        "ext-sodium": "*"
    },
    "require-dev": {
        "laravel/pint": "^1.14",
        "larastan/larastan": "^3.0",
        "pestphp/pest": "^3.0",
        "pestphp/pest-plugin-laravel": "^3.0",
        "phpstan/extension-installer": "^1.4",
        "phpstan/phpstan-deprecation-rules": "^2.0",
        "phpstan/phpstan-phpunit": "^2.0"
    },
    "autoload": {
        "psr-4": {
            "intelfric\\Azampay\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "intelfric\\Azampay\\Tests\\": "tests"
        }
    },
    "scripts": {
        "analyse": "vendor/bin/phpstan analyse",
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage",
        "format": "vendor/bin/pint"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "phpstan/extension-installer": true
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "intelfric\\Azampay\\AzampayServiceProvider"
            ],
            "aliases": {
                "Azampay": "intelfric\\Azampay\\Facades\\Azampay"
            }
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
